type Todo {
  id: ID!
  title: String!
  done: Boolean!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos: [Todo!]!
}

input TodoInput {
  title: String!
}

input UserInput {
  name: String!
  password: String!
}

type Mutation {
  createTodo(input: TodoInput!): Todo!
  createUser(input: UserInput!): User!
}
